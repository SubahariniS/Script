class BankAccount
  def initialize(account_holder, initial_balance = 0)
    @account_holder = account_holder
    @balance = initial_balance
  end

  def add_balance(amount)
    if amount > 0
      @balance += amount
      puts "Deposited ₹#{amount}. New balance: ₹#{@balance}."
    else
      puts "Error: Deposit amount must be greater than zero."
    end
  end

  def withdraw(amount)
    if amount > 0 && amount <= @balance
      @balance -= amount
      puts "Withdrawn ₹#{amount}. Remaining balance: ₹#{@balance}."
    elsif amount > @balance
      puts "Error: Insufficient balance."
    else
      puts "Error: Withdrawal amount must be greater than zero."
    end
  end

  def check_balance
    puts "Current balance: ₹#{@balance}."
    @balance
  end
end

account = BankAccount.new("Harini", 1000)
account.add_balance(500)
account.add_balance(-200)
account.withdraw(300)
account.check_balance
